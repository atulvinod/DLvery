<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>createNewInventoryItem</servlet-name>
        <servlet-class>com.mycompany.dlvery.services.createNewInventoryItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteInventoryItem</servlet-name>
        <servlet-class>com.mycompany.dlvery.services.deleteInventoryItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sessionInvalidate</servlet-name>
        <servlet-class>com.mycompany.dlvery.services.sessionInvalidate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>agentLogin</servlet-name>
        <servlet-class>com.mycompany.dlvery.services.agentLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateAgentStatus</servlet-name>
        <servlet-class>com.mycompany.dlvery.services.updateAgentStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>assignDeliveryToAgent</servlet-name>
        <servlet-class>com.mycompany.dlvery.services.assignDeliveryToAgent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateDelivery</servlet-name>
        <servlet-class>com.mycompany.dlvery.services.updateDelivery</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNewInventoryItem</servlet-name>
        <url-pattern>/services/createNewInventoryItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteInventoryItem</servlet-name>
        <url-pattern>/services/deleteInventoryItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sessionInvalidate</servlet-name>
        <url-pattern>/services/sessionInvalidate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>agentLogin</servlet-name>
        <url-pattern>/agentServices/agentLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateAgentStatus</servlet-name>
        <url-pattern>/services/updateAgentStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>assignDeliveryToAgent</servlet-name>
        <url-pattern>/services/assignDeliveryToAgent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateDelivery</servlet-name>
        <url-pattern>/agentServices/updateDelivery</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>dashboard</web-resource-name>
            <url-pattern>/inventory/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>createNewInventoryItem</web-resource-name>
            <url-pattern>/services/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>Let only managers use this app</description>
            <role-name>manager</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>manager</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login-management.jsp</form-login-page>
            <form-error-page>/loginError.jsp</form-error-page>
        </form-login-config>
    </login-config>
</web-app>
